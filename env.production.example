# NetOps MCP Production Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
HTTP_HOST=0.0.0.0
HTTP_PORT=8815
HTTP_PATH=/netops-mcp

# Configuration File Path
NETOPS_MCP_CONFIG=/app/config/config.json

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/netops-mcp.log

# Security Configuration
# Enable authentication (set to true in production)
REQUIRE_AUTH=true

# API Keys (comma-separated, or set via config.json)
# Generate keys using: python scripts/generate_api_key.py
# Example: API_KEYS=key1,key2,key3
API_KEYS=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Configuration
ENABLE_CORS=false
CORS_ORIGINS=*

# Allowed Hosts (comma-separated)
# Example: ALLOWED_HOSTS=example.com,api.example.com
ALLOWED_HOSTS=

# Network Configuration
DEFAULT_TIMEOUT=30
MAX_SCAN_TIMEOUT=300

# Docker-specific
PYTHONUNBUFFERED=1






